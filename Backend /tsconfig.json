{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",           // ✅ same as moduleResolution
    "moduleResolution": "NodeNext", // ✅ both must match
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}